<div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <div class="registration_text">
 Регистрация
 </div>
<div class="image_signIn">
  <%= image_tag  ("image 18.jpg"), size: '606x508'%>
</div>
  
      
       
        <%= f.email_field :email, autofocus: true,placeholder:" Email",autocomplete: "email",class:"name_field" %>


     
        <%= f.text_field :username,placeholder:" username",class:"username_field" %>
  


     

      <% if User.count==0%>
        <h2>Так как вы первый пользователь вы являетесь админом</h2>
        <%= f.hidden_field :roll , value:"admin" %>
      <%else%>
        <%=f.hidden_field :bill ,value:0 %>
        <%=f.hidden_field :roll ,value:"user" %>
      <%end%>

      
      <div class="field">
       
        <% if @minimum_password_length %>
          <em></em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password",placeholder:" Пароль",class:"password_field" %>
      </div>

      <div class="field">
       

        <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:" Подтверждения пароля ",class:"password_new_field" %>
      </div>
      <br>
      
      
        <%= f.submit "Зарегистрировать",class: " registration_btn text_btn_login"%>
      <% end %>

    </div>
      

<% if  current_user.roll =="admin"%>
       <h1><%= @category.name%>
       <%=link_to t("posts.redaction"),edit_category_path(@category),class:"btn btn-outline-danger"%>
       <%=link_to t("posts.delete"),category_path(@category),method: :delete, data: { confirm: "Are you sure ?"} ,class:"btn btn-outline-danger"%>
       </h1>
   <%end%>



<table class="table table-striped">
  <tr>
    <th class="text-dark">
      <span class="text-dark" ><%= t("categories.name")%> </span></th>
    <th  <span class="text-dark" ><%=t("categories.current")%> </span></th>


  <%@category.products.each  do|product|%>
    <tr>
      <td><%=link_to product.title,product_path(product)%>
      </td>

     
      </tr>
      <%end%>
</table>